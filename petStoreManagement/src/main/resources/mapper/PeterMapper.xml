<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.design.petStoreManagement.mapper.PeterMapper">

    <resultMap type="com.design.petStoreManagement.pojo.Peter" id="PeterMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="images" column="images" jdbcType="VARCHAR"/>
        <result property="createdAt" column="created_at" jdbcType="TIMESTAMP"/>
        <result property="userName" column="user_name" jdbcType="VARCHAR"/>
        <result property="telephone" column="telephone" jdbcType="VARCHAR"/>
        <result property="cardId" column="card_id" jdbcType="VARCHAR"/>
        <result property="address" column="address" jdbcType="VARCHAR"/>
        <result property="sex" column="sex" jdbcType="VARCHAR"/>
        <result property="petName" column="pet_name" jdbcType="VARCHAR"/>
        <result property="createdBy" column="created_by" jdbcType="VARCHAR"/>
        <result property="variety" column="variety" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="PeterMap">
        select
          id, images, created_at, user_name, telephone, card_id, address, sex, pet_name, created_by, variety
        from peter
        where id = #{id}
    </select>



    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into peter(images, created_at, user_name, telephone, card_id, address, sex, pet_name, created_by, variety)
        values (#{images},now(), #{userName}, #{telephone}, #{cardId}, #{address}, #{sex}, #{petName}, #{createdBy}, #{variety})
    </insert>
        <!--用select进行分页查询-->
      <select id="getPageListByCondition" resultMap="PeterMap">
        select *  from peter where created_at is not null
          <if test="page.key.userName != null and page.key.userName != ''">
              and  user_name like '%' #{page.key.userName}  '%'
          </if>
            <!--排序 desc是降序-->
        order by
        created_at desc
        <!--分页查询-->
      
        limit  #{page.startNum} , #{page.pageSize}
    </select>
     <!--分页查询条数-->
    <select id="getPageListCount" resultType="int">
        select count(id) as count from peter where created_at is not null
        <if test="page.key.userName != null and page.key.userName != ''">
            and  user_name like '%' #{page.key.userName}  '%'
        </if>
    </select>

   

    <!--通过主键修改数据-->
    <update id="update">
        update peter
        <set>
            <if test="images != null and images != ''">
                images = #{images},
            </if>
            <if test="createdAt != null">
                created_at = #{createdAt},
            </if>
            <if test="userName != null and userName != ''">
                user_name = #{userName},
            </if>
            <if test="telephone != null and telephone != ''">
                telephone = #{telephone},
            </if>
            <if test="cardId != null and cardId != ''">
                card_id = #{cardId},
            </if>
            <if test="address != null and address != ''">
                address = #{address},
            </if>
            <if test="sex != null and sex != ''">
                sex = #{sex},
            </if>
            <if test="petName != null and petName != ''">
                pet_name = #{petName},
            </if>
            <if test="createdBy != null and createdBy != ''">
                created_by = #{createdBy},
            </if>
            <if test="variety != null and variety != ''">
                variety = #{variety},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from peter where id = #{id}
    </delete>

</mapper>

