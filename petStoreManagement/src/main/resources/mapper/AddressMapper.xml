<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.design.petStoreManagement.mapper.AddressMapper">

    <resultMap type="com.design.petStoreManagement.pojo.Address" id="AddressMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="receiver" column="receiver" jdbcType="VARCHAR"/>
        <result property="addr" column="addr" jdbcType="VARCHAR"/>
        <result property="telephone" column="telephone" jdbcType="VARCHAR"/>
        <result property="createdAt" column="created_at" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="AddressMap">
        select
          id, user_id, receiver, addr, telephone, created_at
        from address
        where id = #{id}
    </select>



    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into address(user_id, receiver, addr, telephone, created_at)
        values (#{userId}, #{receiver}, #{addr}, #{telephone}, now())
    </insert>
        <!--用select进行分页查询-->
      <select id="getPageListByCondition" resultMap="AddressMap">
        select *  from address  where created_at is not null
          <!--根据用户id搜索 不为空 则进入搜索条件-->
          <if test="page.key.userId != null">
              and  user_id =#{page.key.userId}
          </if>
            <!--排序 desc是降序-->
        order by
        created_at desc
        <!--分页查询-->
      
        limit  #{page.startNum} , #{page.pageSize}
    </select>
     <!--分页查询条数-->
    <select id="getPageListCount" resultType="int">
        select count(id) as count from address    where created_at is not null
        <!--根据用户id搜索 不为空 则进入搜索条件-->
        <if test="page.key.userId != null">
            and  user_id =#{page.key.userId}
        </if>
    </select>

   

    <!--通过主键修改数据-->
    <update id="update">
        update address
        <set>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="receiver != null and receiver != ''">
                receiver = #{receiver},
            </if>
            <if test="addr != null and addr != ''">
                addr = #{addr},
            </if>
            <if test="telephone != null and telephone != ''">
                telephone = #{telephone},
            </if>
            <if test="createdAt != null">
                created_at = #{createdAt},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from address where id = #{id}
    </delete>
    <!--获取用户下拉地址-->
    <select id="queryByUserId" resultMap="AddressMap">
        select * from address where  user_id =#{userId};
    </select>
</mapper>

