<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.design.petStoreManagement.mapper.UsersMapper">

    <resultMap type="com.design.petStoreManagement.pojo.Users" id="UsersMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="telephone" column="telephone" jdbcType="VARCHAR"/>
        <result property="userName" column="user_name" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="images" column="images" jdbcType="VARCHAR"/>
        <result property="createdAt" column="created_at" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="UsersMap">
        select
          id, telephone, user_name, password, images, created_at
        from users
        where id = #{id}
    </select>



    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into users(telephone, user_name, password, images, created_at)
        values (#{telephone}, #{userName}, #{password}, #{images}, now())
    </insert>
        <!--用select进行分页查询-->
      <select id="getPageListByCondition" resultMap="UsersMap">
        select *  from users where created_at is not null
          <if test="page.key.telephone != null and page.key.telephone != ''">
              and  telephone like '%' #{page.key.telephone}  '%'
          </if>
            <!--排序 desc是降序-->
        order by
        created_at desc
        <!--分页查询-->
      
        limit  #{page.startNum} , #{page.pageSize}
    </select>
     <!--分页查询条数-->
    <select id="getPageListCount" resultType="int">
        select count(id) as count from users   where created_at is not null
        <if test="page.key.telephone != null and page.key.telephone != ''">
            and  telephone like '%' #{page.key.telephone}  '%'
        </if>
    </select>

   

    <!--通过主键修改数据-->
    <update id="update">
        update users
        <set>
            <if test="telephone != null and telephone != ''">
                telephone = #{telephone},
            </if>
            <if test="userName != null and userName != ''">
                user_name = #{userName},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="images != null and images != ''">
                images = #{images},
            </if>
            <if test="createdAt != null">
                created_at = #{createdAt},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from users where id = #{id}
    </delete>
    <select id="getByTelephone" resultMap="UsersMap">
        select * from users where telephone=#{telephone};
    </select>
</mapper>

