<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.design.petStoreManagement.mapper.PetOrderMapper">

    <resultMap type="com.design.petStoreManagement.pojo.PetOrder" id="PetOrderMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="orderNo" column="order_no" jdbcType="VARCHAR"/>
        <result property="total" column="total" jdbcType="NUMERIC"/>
        <result property="orderType" column="order_type" jdbcType="VARCHAR"/>
        <result property="userName" column="user_name" jdbcType="VARCHAR"/>
        <result property="status" column="status" jdbcType="INTEGER"/>
        <result property="createdAt" column="created_at" jdbcType="TIMESTAMP"/>
        <result property="payTime" column="pay_time" jdbcType="TIMESTAMP"/>
        <result property="telephone" column="telephone" jdbcType="VARCHAR"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="address" column="address" jdbcType="VARCHAR"/>
        <result property="productName" column="product_name" jdbcType="VARCHAR"/>
        <result property="petName" column="pet_name" jdbcType="VARCHAR"/>
        <result property="variety" column="variety" jdbcType="VARCHAR"/>
        <result property="num" column="num" jdbcType="INTEGER"/>
        <result property="prices" column="prices" jdbcType="NUMERIC"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="PetOrderMap">
        select
          id, order_no, total, order_type, user_name, status, created_at, pay_time, telephone, user_id, address, product_name, pet_name, variety, num, prices
        from pet_order
        where id = #{id}
    </select>



    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into pet_order(order_no, total, order_type, user_name, status, created_at, pay_time, telephone, user_id, address, product_name, pet_name, variety, num, prices)
        values (#{orderNo}, #{total}, #{orderType}, #{userName}, #{status},now(), #{payTime}, #{telephone}, #{userId}, #{address}, #{productName}, #{petName}, #{variety}, #{num}, #{prices})
    </insert>
        <!--用select进行分页查询-->
      <select id="getPageListByCondition" resultMap="PetOrderMap">

        select *  from pet_order  where created_at is not null
          <!--订单编号搜索 不为空 则进入搜索条件-->
          <if test="page.key.orderNo != null and page.key.orderNo != ''">
              and  order_no =  #{page.key.orderNo}
          </if>

          <if test="page.key.userId != null ">
              and  user_id =  #{page.key.userId}
          </if>
          <if test="page.key.orderType != null and  page.key.orderType != ''">
              and  order_type = #{page.key.orderType}
          </if>
            <!--排序 desc是降序-->
        order by
        created_at desc
        <!--分页查询-->
      
        limit  #{page.startNum} , #{page.pageSize}
    </select>
     <!--分页查询条数-->
    <select id="getPageListCount" resultType="int">
        select count(id) as count from pet_order   where created_at is not null
        <!--订单编号搜索 不为空 则进入搜索条件-->
        <if test="page.key.orderNo != null and page.key.orderNo != ''">
            and  order_no =  #{page.key.orderNo}
        </if>

        <if test="page.key.userId != null ">
            and  user_id =  #{page.key.userId}
        </if>
        <if test="page.key.orderType != null and  page.key.orderType != '' ">
            and  order_type = #{page.key.orderType}
        </if>
    </select>

   

    <!--通过主键修改数据-->
    <update id="update">
        update pet_order
        <set>
            <if test="orderNo != null and orderNo != ''">
                order_no = #{orderNo},
            </if>
            <if test="total != null">
                total = #{total},
            </if>
            <if test="orderType != null and orderType != ''">
                order_type = #{orderType},
            </if>
            <if test="userName != null and userName != ''">
                user_name = #{userName},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="createdAt != null">
                created_at = #{createdAt},
            </if>
            <if test="payTime != null">
                pay_time = #{payTime},
            </if>
            <if test="telephone != null and telephone != ''">
                telephone = #{telephone},
            </if>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="address != null and address != ''">
                address = #{address},
            </if>
            <if test="productName != null and productName != ''">
                product_name = #{productName},
            </if>
            <if test="petName != null and petName != ''">
                pet_name = #{petName},
            </if>
            <if test="variety != null and variety != ''">
                variety = #{variety},
            </if>
            <if test="num != null">
                num = #{num},
            </if>
            <if test="prices != null">
                prices = #{prices},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from pet_order where id = #{id}
    </delete>
    <!--根据订单编号获取数据-->
    <select id="queryByOrderNo" resultMap="PetOrderMap">
        select * from pet_order where order_no=#{orderNo};
    </select>
    <!--支付-->
    <update id="pay">
      update pet_order set  status=1,pay_time=now()  where order_no = #{orderNo}
    </update>
    <!--取消订单-->
    <update id="saleCancel">
          update pet_order set  status=-1 where order_no = #{orderNo}
    </update>
</mapper>

