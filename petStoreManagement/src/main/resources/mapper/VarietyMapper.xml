<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.design.petStoreManagement.mapper.VarietyMapper">

    <resultMap type="com.design.petStoreManagement.pojo.Variety" id="VarietyMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="descb" column="descb" jdbcType="VARCHAR"/>
        <result property="image" column="image" jdbcType="VARCHAR"/>
        <result property="createdAt" column="created_at" jdbcType="TIMESTAMP"/>
        <result property="createdBy" column="created_by" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="VarietyMap">
        select
          id, name, descb, image, created_at, created_by
        from variety
        where id = #{id}
    </select>



    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into variety(name, descb, image, created_at, created_by)
        values (#{name}, #{descb}, #{image}, now(), #{createdBy})
    </insert>
        <!--用select进行分页查询-->
      <select id="getPageListByCondition" resultMap="VarietyMap">
        select *  from variety where created_at is not null
          <if test="page.key.name != null and page.key.name != ''">
              and  name like '%' #{page.key.name}  '%'
          </if>
            <!--排序 desc是降序-->
        order by
        created_at desc
        <!--分页查询-->
      
        limit  #{page.startNum} , #{page.pageSize}
    </select>
     <!--分页查询条数-->
    <select id="getPageListCount" resultType="int">
        select count(id) as count from variety where created_at is not null
        <if test="page.key.name != null and page.key.name != ''">
            and  name like '%' #{page.key.name}  '%'
        </if>
    </select>

   

    <!--通过主键修改数据-->
    <update id="update">
        update variety
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="descb != null and descb != ''">
                descb = #{descb},
            </if>
            <if test="image != null and image != ''">
                image = #{image},
            </if>
            <if test="createdAt != null">
                created_at = #{createdAt},
            </if>
            <if test="createdBy != null and createdBy != ''">
                created_by = #{createdBy},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from variety where id = #{id}
    </delete>
    <select id="getVarietyList" resultMap="VarietyMap">
        select * from variety where created_at is not null;
    </select>
</mapper>

