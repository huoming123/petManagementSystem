<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.design.petStoreManagement.mapper.PetMapper">

    <resultMap type="com.design.petStoreManagement.pojo.Pet" id="PetMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="petName" column="pet_name" jdbcType="VARCHAR"/>
        <result property="age" column="age" jdbcType="VARCHAR"/>
        <result property="sex" column="sex" jdbcType="VARCHAR"/>
        <result property="images" column="images" jdbcType="VARCHAR"/>
        <result property="variety" column="variety" jdbcType="VARCHAR"/>
        <result property="likeFood" column="like_food" jdbcType="VARCHAR"/>
        <result property="hobby" column="hobby" jdbcType="VARCHAR"/>
        <result property="contact" column="contact" jdbcType="VARCHAR"/>
        <result property="vaccination" column="vaccination" jdbcType="VARCHAR"/>
        <result property="isBatch" column="is_batch" jdbcType="VARCHAR"/>
        <result property="remark" column="remark" jdbcType="VARCHAR"/>
        <result property="createdAt" column="created_at" jdbcType="TIMESTAMP"/>
        <result property="createdBy" column="created_by" jdbcType="VARCHAR"/>
        <result property="prices" column="prices" jdbcType="NUMERIC"/>
        <result property="showIn" column="show_in" jdbcType="INTEGER"/>
        <result property="num" column="num" jdbcType="INTEGER"/>
        <result property="total" column="total" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="PetMap">
        select
         *
        from pet
        where id = #{id}
    </select>



    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into pet(pet_name, age, sex, images, variety, like_food, hobby, contact, vaccination, is_batch, remark, created_at, created_by, prices, show_in,num,total)
        values (#{petName}, #{age}, #{sex}, #{images}, #{variety}, #{likeFood}, #{hobby}, #{contact}, #{vaccination}, #{isBatch}, #{remark}, now(), #{createdBy}, #{prices}, 1,1,#{total})
    </insert>
        <!--用select进行分页查询-->
      <select id="getPageListByCondition" resultMap="PetMap">
        select *  from pet where created_at is not null
          <if test="page.key.petName != null and page.key.petName != ''">
              and  pet_name like '%' #{page.key.petName}  '%'
          </if>
          <if test="page.key.variety != null and page.key.variety != ''">
              and  variety like '%' #{page.key.variety}  '%'
          </if>

          <if test="page.key.showIn != null">
              and  show_in = #{page.key.showIn}
          </if>
            <!--排序 desc是降序-->
        order by
        created_at desc
        <!--分页查询-->
      
        limit  #{page.startNum} , #{page.pageSize}
    </select>
     <!--分页查询条数-->
    <select id="getPageListCount" resultType="int">
        select count(id) as count from pet where created_at is not null
        <if test="page.key.petName != null and page.key.petName != ''">
            and  pet_name like '%' #{page.key.petName}  '%'
        </if>
        <if test="page.key.variety != null and page.key.variety != ''">
            and  variety like '%' #{page.key.variety}  '%'
        </if>

        <if test="page.key.showIn != null">
            and  show_in = #{page.key.showIn}
        </if>
    </select>

   

    <!--通过主键修改数据-->
    <update id="update">
        update pet
        <set>
            <if test="petName != null and petName != ''">
                pet_name = #{petName},
            </if>
            <if test="age != null and age != ''">
                age = #{age},
            </if>
            <if test="sex != null and sex != ''">
                sex = #{sex},
            </if>
            <if test="images != null and images != ''">
                images = #{images},
            </if>
            <if test="variety != null and variety != ''">
                variety = #{variety},
            </if>
            <if test="likeFood != null and likeFood != ''">
                like_food = #{likeFood},
            </if>
            <if test="hobby != null and hobby != ''">
                hobby = #{hobby},
            </if>
            <if test="contact != null and contact != ''">
                contact = #{contact},
            </if>
            <if test="vaccination != null and vaccination != ''">
                vaccination = #{vaccination},
            </if>
            <if test="isBatch != null and isBatch != ''">
                is_batch = #{isBatch},
            </if>
            <if test="remark != null and remark != ''">
                remark = #{remark},
            </if>
            <if test="createdAt != null">
                created_at = #{createdAt},
            </if>
            <if test="total != null">
                total = #{total},
            </if>
            <if test="createdBy != null and createdBy != ''">
                created_by = #{createdBy},
            </if>
            <if test="prices != null">
                prices = #{prices},
            </if>
            <if test="showIn != null">
                show_in = #{showIn},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from pet where id = #{id}
    </delete>
    <select id="getIndexPetList" resultMap="PetMap">
        select * from pet where created_at is not null and show_in =1 limit 4;
    </select>
    <select id="getByPetName" resultMap="PetMap">
        select * from pet where pet_name =#{petName};
    </select>
</mapper>

