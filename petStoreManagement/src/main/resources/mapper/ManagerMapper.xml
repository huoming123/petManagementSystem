<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.design.petStoreManagement.mapper.ManagerMapper">

    <resultMap type="com.design.petStoreManagement.pojo.Manager" id="ManagerMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="telephone" column="telephone" jdbcType="VARCHAR"/>
        <result property="userName" column="user_name" jdbcType="VARCHAR"/>
        <result property="userNo" column="user_no" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="address" column="address" jdbcType="VARCHAR"/>
        <result property="createdAt" column="created_at" jdbcType="TIMESTAMP"/>
        <result property="createdBy" column="created_by" jdbcType="VARCHAR"/>
        <result property="images" column="images" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="ManagerMap">
        select
     *
        from manager
        where id = #{id}
    </select>



    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into manager(telephone, user_name, user_no, password, address, created_at, created_by, images)
        values (#{telephone}, #{userName}, #{userNo}, #{password}, #{address}, #{createdAt}, #{createdBy}, #{images})
    </insert>
        <!--用select进行分页查询-->
      <select id="getPageListByCondition" resultMap="ManagerMap">
       <!-- <if test="page.key.userName != null and page.key.userName != ''">
            and  a.user_name like '%' #{page.key.userName}  '%'
        </if>
        <if test="page.key.year != null ">
            <bind name="pattern" value="'%' + page.key.year + '%'" />
            and a.created_at like #{pattern}
        </if>-->
        select *  from manager
            <!--排序 desc是降序-->
        order by
        created_at desc
        <!--分页查询-->
      
        limit  #{page.startNum} , #{page.pageSize}
    </select>
     <!--分页查询条数-->
    <select id="getPageListCount" resultType="int">
        select count(id) as count from manager   
    </select>

   

    <!--通过主键修改数据-->
    <update id="update">
        update manager
        <set>
            <if test="telephone != null and telephone != ''">
                telephone = #{telephone},
            </if>
            <if test="userName != null and userName != ''">
                user_name = #{userName},
            </if>
            <if test="userNo != null and userNo != ''">
                user_no = #{userNo},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="address != null and address != ''">
                address = #{address},
            </if>
            <if test="createdAt != null">
                created_at = #{createdAt},
            </if>
            <if test="createdBy != null and createdBy != ''">
                created_by = #{createdBy},
            </if>
            <if test="images != null and images != ''">
                images = #{images},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from manager where id = #{id}
    </delete>
   <select id="getByUserNo" resultMap="ManagerMap">
       select * from manager where user_no=#{userNo};
   </select>

    <select id="getByTelephone" resultMap="ManagerMap">
      select * from manager where telephone=#{telephone};
    </select>
</mapper>

